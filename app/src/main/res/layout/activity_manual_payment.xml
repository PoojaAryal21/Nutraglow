<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="100dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/paymentName"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="12dp"
            android:hint="Full Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/paymentPhone"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Phone Number (10 digits)"
            android:inputType="phone"
            android:maxLength="10"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/cardNumberInput"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Card Number (16 digits)"
            android:inputType="number"
            android:maxLength="16"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/expiryDateInput"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Expiry Date (MM/yy)"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/cvvInput"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="CVV (3 digits)"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:layout_marginBottom="16dp"/>

        <ProgressBar
            android:id="@+id/paymentProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/paymentStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="1dp" />

        <Button
            android:id="@+id/payNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/purple_500"
            android:text="Pay Now"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancelPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
